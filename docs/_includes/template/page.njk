---
layout: template/base.njk
---

<h1>{{ title }}</h1>
{{ content | safe }}

{% if page_authors -%}
  <aside style="background: #aaa; padding: 1em;">
  <h2>About this page</h2>

  {% if page_authors -%}
    <p>This page was written by</p>
    <ul style="list-style: none; display: flex; gap: 1em; padding: 0; margin: 0;">
    {% for author_id in page_authors %}
      <li>
        {{ comp.author.cred({ id: author_id }) | safe }}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
  </aside>
{%- endif %}